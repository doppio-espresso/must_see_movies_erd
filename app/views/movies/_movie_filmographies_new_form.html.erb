<!-- Form role start -->
<%= form_with(model: @role, local: true) do |f| %>
<!-- Form role end -->

  <!-- Label and input for actor_id start -->
  <div class="form-group">
    <%= f.label :actor_id %>

    <!-- Input for actor_id start -->
    <%= f.text_field :actor_id, class: "form-control" %>
    <!-- Input for actor_id end -->
  </div>
  <!-- Label and input for actor_id end -->

  <!-- Label and input for movie_id start -->
  <!-- Input for movie_id start -->
  <%= f.hidden_field :movie_id, value: @movie.id %>
  <!-- Input for movie_id end -->
  <!-- Label and input for movie_id end -->

  <!-- Label and input for actor_role start -->
  <div class="form-group">
    <%= f.label :actor_role %>

    <!-- Input for actor_role start -->
    <%= f.text_field :actor_role, class: "form-control" %>
    <!-- Input for actor_role end -->
  </div>
  <!-- Label and input for actor_role end -->

  <%= f.submit "Create role", class: "btn btn-block btn-outline-secondary" %>
<% end %>
